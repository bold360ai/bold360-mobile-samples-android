<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sdk.samples">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:name="androidx.multidex.MultiDexApplication">
        <activity android:name=".topics.Autocomplete">
            <intent-filter>
                <action android:name="com.sdk.sample.action.AUTOCOMPLETE"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".topics.BotChat"
                android:configChanges="orientation|screenSize|locale|layoutDirection">
            <intent-filter>
                <action android:name="com.sdk.sample.action.BOT_CHAT"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".topics.BoldChat"
                android:configChanges="orientation|screenSize|locale|layoutDirection">
            <intent-filter>
                <action android:name="com.sdk.sample.action.BOLD_CHAT"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".topics.BoldChatAsync"
                android:configChanges="orientation|screenSize|locale|layoutDirection">
            <intent-filter>
                <action android:name="com.sdk.sample.action.BOLD_ASYNC_CHAT"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".topics.CustomFileUpload"
                android:configChanges="orientation|screenSize|locale|layoutDirection">
            <intent-filter>
                <action android:name="com.sdk.sample.action.BOLD_CHAT_UPLOAD"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".topics.BoldUploadNoUI"
                android:configChanges="orientation|screenSize|locale|layoutDirection">
            <intent-filter>
                <action android:name="com.sdk.sample.action.BOLD_UPLOAD_NO_UI"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".topics.CustomedWelcomeBotChat"
                android:configChanges="orientation|screenSize|locale|layoutDirection">
            <intent-filter>
                <action android:name="com.sdk.sample.action.WELCOME_BOT_CHAT"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".topics.BoldChatAvailability"
                android:configChanges="orientation|screenSize|locale|layoutDirection">
            <intent-filter>
                <action android:name="com.sdk.sample.action.BOLD_CHAT_AVAILABILITY"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".topics.PrechatExtraData"
                android:configChanges="orientation|screenSize|locale|layoutDirection">
            <intent-filter>
                <action android:name="com.sdk.sample.action.PRE_CHAT_EXTRA_DATA"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>