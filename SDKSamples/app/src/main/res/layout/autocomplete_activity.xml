<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include
                layout="@layout/samples_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <LinearLayout
                android:id="@+id/root_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

            <TextView
                    android:id="@+id/topic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginBottom="10dp"
                    android:text="sssaa"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            <LinearLayout
                    android:id="@+id/autocomplete_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="3dp">

                <FrameLayout
                        android:id="@+id/autocomplete_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <RelativeLayout
                        android:id="@+id/article_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rect_shape"
                        android:orientation="vertical"
                        android:padding="2dp"
                        android:visibility="gone">

                    <TextView
                            android:id="@+id/article_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:padding="4dp"
                            android:text="Article:"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                    <WebView
                            android:id="@+id/article_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/article_label"
                            android:layout_alignParentBottom="true" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>