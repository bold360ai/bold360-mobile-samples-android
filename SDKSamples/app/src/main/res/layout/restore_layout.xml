<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/launchLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="20dp">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="@string/create_restore_chat_instruction"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/topic_titles_text"
                android:layout_marginLeft="5dp" />

        <RadioGroup
                android:id="@+id/chat_action_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:orientation="vertical">

            <RadioButton
                    android:id="@+id/bot_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:tag="bot_chat"
                    android:text="Bot chat" />

            <RadioButton
                    android:id="@+id/bold_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="bold_chat"
                    android:text="Bold chat" />

            <RadioButton
                    android:id="@+id/async_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="async_chat"
                    android:text="Async chat" />

            <RadioButton
                    android:id="@+id/current_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue last" />

        </RadioGroup>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/create_chat"
                    style="@style/main_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Create Chat" />

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/restore_chat"
                    style="@style/main_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="Restore Chat" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:maxHeight="20dp"
            android:visibility="invisible" />


</FrameLayout>

